package com.loiane.cursojava.lab1617;

import java.util.Scanner;

public class exercicio2 {
	
	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		int i = 0;
		
		do {
			
			System.out.println("Digite o seu nome");
			String nome = scan.next();
			System.out.println("Digite sua idade");
			int idade = scan.nextInt();
			System.out.println("Digite o seu sexo: F ou M");
			String sexo = scan.next();
			System.out.println("Digite seu sal치rio");
			int sal = scan.nextInt();
			System.out.println("Digite o seu estado civil : S - Solteiro, C - Casado , V - Viuvo ou D - Divorciado");
			String estado = scan.next();
			
			
			if(nome.length() < 3) {
				
				System.out.println("Erro: Nome precisa ter mais que 3 caracteres \n");
				i = 1;
			}
			
			if(idade <= 0 || idade >= 150) {
				
				System.out.println("Erro: Nome precisa ter mais que 3 caracteres \n");
				i = 1;
			}
			
			if(sexo.equalsIgnoreCase("m")) {
				
				sexo = "Masculino";
				i = 0;
			} else if (sexo.equalsIgnoreCase("f")){
				
				sexo = "Feminino";
				i = 0;
				i=0;
			} else {
				System.out.println("Erro: Sexo inv치lido");
				i=1;
			}
			
			if(sal<0) {
				
				System.out.println("Erro: Sal치rio precisa ser maior que 0");
				i=1;
			} else {
				i=0;
			}
			
			if(estado.equalsIgnoreCase("s")) {
				
				estado = "Solteiro";
				i = 0;
			} else if (sexo.equalsIgnoreCase("c")){
				
				estado = "Casado";
				i = 0;
				i=0;
			} else if (sexo.equalsIgnoreCase("v")){
				
				estado = "Viuvo";
				i = 0;
				i=0;
			} else if (sexo.equalsIgnoreCase("d")){
				
				estado = "Divorciado";
				i = 0;
				i=0;
			} else {
				System.out.println("Erro: Estado Civil Inv치lido");
				i=1;
			}
			
			
			
		} while(i > 0);
	}
}
