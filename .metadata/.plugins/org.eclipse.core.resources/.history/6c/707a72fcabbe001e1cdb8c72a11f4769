package com.loiane.cursojava.lab4752;

import java.util.Scanner;

public class Agenda {
	
	Scanner scan = new Scanner(System.in);
	
	public static Contato adicionarContato() {
		Scanner scan = new Scanner(System.in);
		Contato contato = new Contato();
		Contato contato2 = new Contato();
		Contato contato3 = new Contato();
		
		System.out.println(contato.getIdentificador());
		System.out.println(contato2.getIdentificador());
		System.out.println(contato3.getIdentificador());
		
		System.out.println("Digite o nome do contato");
		String nome = scan.nextLine();
		
		System.out.println("Digite o telefone com o DDD");
		String tel = scan.next();
		
		contato.setNome(nome);
		contato.setTelefone(tel);
		
		return contato;
	}
	
	public static void consultarContato() {
		
	}
}
