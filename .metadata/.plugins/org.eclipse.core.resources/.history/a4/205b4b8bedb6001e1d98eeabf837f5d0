package com.loiane.cursojava.lab1617;

import java.text.DecimalFormat;
import java.util.Scanner;

public class exercicio41 {
	
	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		DecimalFormat formato = new DecimalFormat("#.##");
		
		System.out.println("Digite o valor da sua d√≠vida");
		double valor = scan.nextDouble();
		
		System.out.println("Em quantas parcelas?");
		int v = scan.nextInt();
		int taxa = 0;
		System.out.println("Valor da dividida | Valor dos Juros | Quantidade de parcelas | Valor da Parcela");
		for(int i = 0; i<= v; i++) {
			
			if(i % 3 == 0) {
				taxa += 5;
				System.out.println("R$ " + formato.format(valor) + "		" + formato.format(valor-valor*taxa/100)+ "			" + i + "		R$		" + 
						formato.format(valor/i));
			}			
	
		}
	}
}
